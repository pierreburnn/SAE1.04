{% extends 'base.html.twig' %}

{% block title %}Contact - Portfolio{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="POST" action="{{ path('send_email') }}">
                <fieldset>
                    <legend>Formulaire de contact</legend>
                    <div class="row mb-3">
                        <label for="staticEmail" class="col-sm-2 col-form-label">Email destinataire </label>
                        <div class="col-sm-10">
                            <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="pierre.hiltenbrand.burianne@etu.univ-st-etienne.fr">
                        </div>
                    </div>
                    <div>
                        <label for="email" class="form-label mt-4">Votre adresse mail</label>
                        <input type="email" class="form-control" id="email" name="email" required placeholder="Entrez votre adresse mail">
                    </div>
                    <div>
                        <label for="message" class="form-label mt-4">Votre message</label>
                        <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Envoyer</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}
