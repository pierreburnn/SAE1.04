{% extends 'base.html.twig' %}

{% block title %}Téléchargement CV - Portfolio{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="POST" action="{{ path('download_cv') }}">
                <fieldset>
                    <legend>Téléchargement du CV</legend>
                    <div class="row mb-3">
                        <label for="staticEmail" class="col-sm-2 col-form-label">CV de</label>
                        <div class="col-sm-10">
                            <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="Pierre HILTENBRAND--BURIANNE">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="firstname" class="form-label mt-4">Votre prénom</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" required placeholder="Entrez votre prénom">
                        </div>
                        <div class="col-md-6">
                            <label for="lastname" class="form-label mt-4">Votre nom</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" required placeholder="Entrez votre nom">
                        </div>
                    </div>
                    <div>
                        <label for="email" class="form-label mt-4">Votre adresse mail</label>
                        <input type="email" class="form-control" id="email" name="email" required placeholder="Entrez votre adresse mail">
                    </div>
                    <button type="submit" class="btn btn-primary mt-4">Télécharger le CV</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}
